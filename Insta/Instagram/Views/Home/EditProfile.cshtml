@model Instagram.Models.User
    @{
        ViewBag.Title = "EditProfile";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="css/edit.css">
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <title>Document</title>
    </head>

    <body>

    
        <div class="container bootstrap snippets bootdey">
            <h1 class="text-primary">Edit Profile</h1>
            <hr>
            <div class="row">
                <!-- left column -->
                <div class="col-md-3">
                    <div class="text-center">
                        <img src="~/Content/images/profileImage/@Model.ProfileImage"
                             class="avatar img-circle img-thumbnail" alt="avatar">

                        
                    </div>
                </div>
                <!-- edit form column -->
                <div class="col-md-9 personal-info">
                    <h3>Personal info</h3>
                    @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }
               ))
                    {

                        <div class="form-group">
                            <label class="col-lg-3 control-label">First name:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Last name:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(c => c.LastName, new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Phone Number:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(c => c.Mobile, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                            </div>
                        </div>

                        <input type="file" name="file" class="form-control">
                        <input type="submit" name="submit" id="btnSubmit" class="btn btn-primary btn-sm mt-3"
                               value="Submit">
                    }
                </div>
            </div>
        </div>
        <hr>

    </body>

</html>


