@model Instagram.ViewModels.UserFriendRequestViewModel
@{
    ViewBag.Title = "FriendList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>



    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{int x = 1; }
            @foreach (var friend in Model.friends)
            {
                <tr>
                    <th scope="row">@x</th>
                    <td>@friend.FirstName</td>
                    <td>@friend.LastName</td>
                    <td>
                        

                        <a href="@Url.Action("Friend", "Friend", new { user = Model.user.Email, visitedUser = friend.Email })">
                            <input type="submit" value="View" name="View" class="btn btn-primary" />
                        </a>



                    </td>
                    
                </tr>
                x += 1;
            }


        </tbody>
    </table>


</body>
</html>


