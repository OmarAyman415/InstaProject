@model Instagram.ViewModels.LoginRegisterViewModel
@{
    ViewBag.Title = "Login"; Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
            integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
            crossorigin="anonymous" />
        <link rel="stylesheet" href="~/Content/themes/base/style.css" />
        <title>Instagram</title>
        <link rel="shortcut icon" href="images/5296765_camera_instagram_instagram logo_icon.svg" />
    </head>


    <body>
        <div class="container">
            <div class="signin-signup">
            @*Login Form*@
            @using (Html.BeginForm())
            {
                    <form action="" class="sign-in-form">
                        <h2 class="title">Sign in</h2>
                        <div class="input-field">
                            <i class="fas fa-user"></i>

                        @Html.TextBoxFor(c => c.loginModel.Username,new{placeholder = "Username"})
                        </div>
                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                        @Html.PasswordFor(c => c.loginModel.Password,new{placeholder = "Password"})
                        </div>
                        <div>@Html.ValidationSummary()</div>
                        <input type="submit" value="Login" class="btn" name="login" />
                        <p class="account-text">
                            Don't have an account ? <a href="#" id="sign-up-btn2">Sign up</a>
                        </p>

                    </form>
            }

            @*Register Form*@
            @using (Html.BeginForm("Register", "Security", FormMethod.Post, new { enctype = "multipart/form-data" }
                ))
            {
                    <form action="" class="sign-up-form">


                        <h2 class="title">Sign up</h2>

                        <div class="input-field">
                            <i class="fas fa-user"></i>
                        @Html.TextBoxFor(c => c.registerModel.UserName,new{placeholder = "Username"})

                        </div>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                        @Html.TextBoxFor(c => c.registerModel.FirstName,new{placeholder = "First Name"})

                        </div>

                        <div class="input-field">
                            <i class="fas fa-user"></i>
                        @Html.TextBoxFor(c => c.registerModel.LastName,new{placeholder = "Last Name"})

                        </div>

                        <div class="input-field">
                            <i class="fas fa-envelope"></i>

                        @Html.TextBoxFor(c => c.registerModel.Email,new{placeholder = "Email"})

                        </div>

                        <div class="input-field">
                            <i class="fas fa-phone"></i>
                        @Html.TextBoxFor(c => c.registerModel.Mobile,new{placeholder = "Mobile"})

                        </div>

                        <div class="input-field form-group">
                            <i class="fas fa-lock"></i>

                        @Html.PasswordFor(c => c.registerModel.UserPassword,new{placeholder = "Password"})

                        </div>

                        <input id="imagePath" title="Upload Images" type="file" name="file" />

                        <div>@Html.ValidationSummary()</div>

                        <input type="submit" value="Sign up" class="btn" name="signUp" />
                    </form>
            }
            </div>
            <div class="panels-container">
                <div class="panel left-panel">
                    <div class="content">
                        <h3>Explore And Discover</h3>
                        <p>
                            Instagram is social network , people can upload photos or videos
                            and shre them with thier followers
                        </p>
                        <button class="btn" id="sign-in-btn">Sign in</button>
                    </div>
                    <img src="~/Content/themes/base/images/undraw_social_life_re_x7t5.svg" alt="" class="image" />
                </div>
                <div class="panel right-panel">
                    <div class="content">
                        <h3>Hello, Friend!</h3>
                        <p>Enter your personal details an start journey with us</p>
                        <button class="btn" id="sign-up-btn">Sign up</button>
                    </div>
                    <img src="~/Content/themes/base/images/undraw_social_friends_re_7uaa.svg" alt="" class="image" />
                </div>
            </div>
        </div>

        <script src="~/Content/themes/base/js/Animation.js"></script>
    </body>

</html>
